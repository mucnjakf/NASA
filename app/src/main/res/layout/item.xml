<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/black"
    app:cardCornerRadius="@dimen/cardView_cardCornerRadius_item"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/linearLayout_padding_item">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="@dimen/ivItem_layout_width"
            android:layout_height="@dimen/ivItem_layout_height"
            tools:src="@drawable/nasa" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tvItem_layout_height"
            android:layout_marginLeft="@dimen/tvItem_layout_marginLeft"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tvItem_textSize"
            tools:text="Picture of the day" />

    </LinearLayout>
</androidx.cardview.widget.CardView>